<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgPFP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/profile_circle"
    />
    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgPFP"
        android:layout_alignBottom="@+id/imgPFP"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:textSize="35sp"
        android:text="Ariel Yitzhaki"
        android:textStyle="bold"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlus"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/HorizontalCenterGuideLine"
        app:icon="@drawable/plus_sign"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:strokeColor="@android:color/black"
        app:strokeWidth="3dp"
        app:cornerRadius="0dp"
        app:iconTint="@color/black"
        app:backgroundTint="@color/white"
        app:iconSize="50dp"

        />
    <ImageView
        android:id="@+id/HorizontalCenterGuideLine"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMinus"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/HorizontalCenterGuideLine"
        app:icon="@drawable/minus_sign"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:strokeColor="@android:color/black"
        app:strokeWidth="3dp"
        app:cornerRadius="0dp"
        app:iconTint="@color/black"
        app:backgroundTint="@color/white"
        app:iconSize="50dp"
        />

    <TextView
        android:id="@+id/number_display_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/black_border_rectangle"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="00"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/bottom_background"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#4A0072"
        />

    <TextView
        android:id="@+id/background_guide_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>